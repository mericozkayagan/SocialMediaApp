@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>    
    <link rel="stylesheet" href="~/purple/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/purple//assets/vendors/css/vendor.bundle.base.css">    
    <link rel="stylesheet" href="~/purple//assets/css/style.css">    
    <link rel="shortcut icon" href="~/purple//assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <!-- partial:../../partials/_navbar.html -->
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" href="#"><img src="~/purple/assets/images/logo.svg" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href="#"><img src="~/purple/assets/images/logo-mini.svg" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                <div class="search-field d-none d-md-block">
                    <form class="d-flex align-items-center h-100" action="#">
                        <div class="input-group">
                            <div class="input-group-prepend bg-transparent">
                                <i class="input-group-text border-0 mdi mdi-magnify"></i>
                            </div>
                            <input type="text" class="form-control bg-transparent border-0" placeholder="Ara">
                        </div>
                    </form>
                </div>
                <ul class="navbar-nav navbar-nav-right">
                    @await Component.InvokeAsync("LoggedUserInfo")
                    @await Component.InvokeAsync("NavbarMessages")                    
                    @await Component.InvokeAsync("NavbarNotification")                   
                    <li class="nav-item nav-logout d-none d-lg-block">
                        <a class="nav-link" href="/Login/Logout">
                            <i class="mdi mdi-power"></i>
                        </a>
                    </li>
                    
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">
                            <span class="menu-title">Ana Sayfa</span>
                            <i class="mdi mdi-home menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Message/Inbox">
                            <span class="menu-title">Mesajlar</span>
                            <i class="mdi mdi-email menu-icon"></i>
                        </a>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Profile/Index">
                            <span class="menu-title">Profilim</span>
                            <i class="mdi mdi-account-box menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Post/Index">
                            <span class="menu-title">Postlarım</span>
                            <i class="mdi mdi-book-multiple menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Notification/Index">
                            <span class="menu-title">Bildirimler</span>
                            <i class="mdi mdi-bell menu-icon"></i>
                        </a>
                    </li>

                    <li class="nav-item sidebar-actions">
                        <div class="border-top">
                            <span class="nav-link">
                                <a href="/Post/CreatePost/" class="btn btn-block btn-lg btn-gradient-primary mt-2">+ Post Oluştur</a>
                            </span>
                        </div>

                    </li>
                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                <!-- content-wrapper ends -->
                <!-- partial:../../partials/_footer.html -->
                <footer class="footer">
                    <div class="container-fluid clearfix">
                        <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © 2022</span>
                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->   

    <script src="~/purple/assets/vendors/js/vendor.bundle.base.js"></script>    
    <script src="~/purple/assets/vendors/chart.js/Chart.min.js"></script>    
    <script src="~/purple/assets/js/off-canvas.js"></script>
    <script src="~/purple/assets/js/hoverable-collapse.js"></script>
    <script src="~/purple/assets/js/misc.js"></script>    
    <script src="~/purple/assets/js/dashboard.js"></script>
    <script src="~/purple/assets/js/todolist.js"></script>
    
    <!-- endinject -->
    <!-- Custom js for this page -->
    <!-- End custom js for this page -->
</body>
</html>