@using EntityLayer.Concrete
@model List<Notification>
    
    <li class="nav-item dropdown">
        <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
            <i class="mdi mdi-bell-outline"></i>
            <span class="count-symbol bg-danger"></span>
        </a>
        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
            <h6 class="p-3 mb-0">Bildirimler</h6>
            @foreach (var item in Model)
            {
                <div class="dropdown-divider"></div>
                <a class="dropdown-item preview-item" href="/Notification/GetNotificationDetails/@item.NotificationId">
                    <div class="preview-thumbnail">
                        <div class="@item.NotificationColor">
                            <i class="@item.NotificationTypeSymbol"></i>
                        </div>
                    </div>
                    <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                        <h6 class="preview-subject font-weight-normal mb-1">@item.NotificationType</h6>
                        <p class="text-gray ellipsis mb-0"> @item.NotificationDetails</p>
                    </div>
                </a>
                <div class="dropdown-divider"></div>
            }
            <h6 href="/Notification/Index" class="p-3 mb-0 text-center">See all notifications</h6>
        </div>
    </li>
<script src="~/purple/assets/vendors/js/vendor.bundle.base.js"></script>    
    <script src="~/purple/assets/vendors/chart.js/Chart.min.js"></script>    
    <script src="~/purple/assets/js/off-canvas.js"></script>
    <script src="~/purple/assets/js/hoverable-collapse.js"></script>    
    <script src="~/purple/assets/js/misc.js"></script>    
    <script src="~/purple/assets/js/dashboard.js"></script>
    <script src="~/purple/assets/js/todolist.js"></script>
