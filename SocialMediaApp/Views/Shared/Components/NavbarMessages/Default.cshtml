@using EntityLayer.Concrete
@model List<Message>
    
    <li class="nav-item dropdown">
        <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
            <i class="mdi mdi-email-outline"></i>
            <span class="count-symbol bg-warning"></span>
        </a>
        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
            <h6 class="p-3 mb-0">Mesajlarım</h6>
            @foreach (var item in Model)
            {
                <div class="dropdown-divider"></div>
                <a class="dropdown-item preview-item" href="/Message/GetInboxMessageDetails/@item.MessageID">
                    <div class="preview-item-content d-flex align-items-start flex-column">
                        <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.Sender size mesaj gönderdi</h6>
                        <p class="text-gray mb-0">@item.Title - @DateTime.Parse(item.MessageDate.ToString("g")) </p>
                    </div>
                </a>
                <div class="dropdown-divider"></div>
            }

            <h6 class="p-3 mb-0 text-center">@TempData["count"] yeni mesajınız var.</h6>
        </div>
    </li>
<script src="~/purple/assets/vendors/js/vendor.bundle.base.js"></script>    
    <script src="~/purple/assets/vendors/chart.js/Chart.min.js"></script>    
    <script src="~/purple/assets/js/off-canvas.js"></script>
    <script src="~/purple/assets/js/hoverable-collapse.js"></script>
    <script src="~/purple/assets/js/misc.js"></script>    
    <script src="~/purple/assets/js/dashboard.js"></script>
    <script src="~/purple/assets/js/todolist.js"></script>