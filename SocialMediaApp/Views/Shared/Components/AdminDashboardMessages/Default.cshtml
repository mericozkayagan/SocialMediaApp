@using EntityLayer.Concrete
@model List<Message>
 <div class="col-lg-4">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Mesajlar</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content ibox-heading">
                <h3><i class="fa fa-envelope-o"></i>&nbsp;@TempData["count"] tane okunmamış mesajınız var.</h3>                   
            </div>
            <div class="ibox-content">
                <div class="feed-activity-list">
                    @foreach (var item in Model)
                    {
                        <div class="feed-element">
                        <div>
                            <small class="float-right text-navy">@item.Title</small>
                            <strong>@item.Sender</strong>
                            <div>@item.MessageDetails</div>
                            <small class="text-muted">@item.MessageDate.ToString("g")</small>
                        </div>
                    </div>
                    }                    

                </div>
            </div>
        </div>
    </div>